#%RAML 1.0 Library
annotationTypes:
  javaClassName:
    type: string
    allowedTargets: TypeDeclaration
types:
  RamlDataType:
    type: object
    description: Hello!!!
    properties:
      propString:
        type: string
        description: Just a string....
      propStringArray1: string[]
